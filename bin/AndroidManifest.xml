<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.countdowndemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.demo.countdowndemo.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.demo.countdowndemo.CreateNewEventActivity"
            android:label="@string/title_activity_create_new"
            android:screenOrientation="portrait"
            android:parentActivityName="com.demo.countdowndemo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.demo.countdowndemo.MainActivity" />
        </activity>
        <activity
            android:name="com.demo.countdowndemo.ViewEventActivity"
            android:label="@string/title_activity_view_event"
            android:screenOrientation="portrait"
            android:parentActivityName="com.demo.countdowndemo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.demo.countdowndemo.MainActivity" />
        </activity>
    </application>

</manifest>
